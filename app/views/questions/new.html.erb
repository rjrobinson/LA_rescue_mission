<h1> Ask A Question </h1>


<%= form_for @question  do |f| %>

  <% if @question.errors.any?  %>
    <ul>
      <% @question.errors.full_messages.each do |message|%>
        <li> <%= message %> </li>
      <% end %>
    <ul>
  <% end %>


<div>
  <%= f.label :title %>:
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %>:
  <%= f.text_field :description %>
</div>
  <%= f.submit %>

<% end %>
